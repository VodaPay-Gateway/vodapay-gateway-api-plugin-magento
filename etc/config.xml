<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <vodapay>
                <active>1</active>
                <title>Vodapay</title>
                <instructions>Pay via Vodapay Gateway</instructions>
                <payment_action>Authorization</payment_action>
                <test>1</test>
                <model>Vodapay\Vodapay\Model\Vodapay</model>
                <merchant_id backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <merchant_private_key backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <is_gateway>0</is_gateway>
                <can_order>1</can_order>
                <can_use_checkout>1</can_use_checkout>
                <can_capture>1</can_capture>
                <can_void>1</can_void>
                <can_refund>0</can_refund>
                <can_use_for_multishipping>1</can_use_for_multishipping>
            </vodapay>
        </payment>
    </default>
</config>
